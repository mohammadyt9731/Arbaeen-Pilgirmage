<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/blue_400</item>
        <item name="colorPrimaryDark">#182211</item>
        <item name="colorAccent">@color/blue_400</item>


    </style>

    <style name="button_style">

        <item name="android:layout_marginTop">10dp</item>
        <item name="android:textSize">@dimen/_12ssp</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_width">@dimen/_35sdp</item>
        <item name="android:layout_height">@dimen/_35sdp</item>
        <item name="android:onClick">onClick</item>


    </style>

    <style name="banner_style">

        <item name="android:gravity">center</item>
        <item name="android:layout_marginLeft">@dimen/space_large</item>
        <item name="android:layout_marginRight">@dimen/space_large</item>
        <item name="android:layout_marginBottom">@dimen/space_small</item>


    </style>

    <style name="arabic_text_style">
        <item name="android:textSize">20sp</item>
        <item name="android:paddingTop">15dp</item>
        <item name="android:paddingBottom">5dp</item>
        <item name="android:paddingLeft">5dp</item>
        <item name="android:paddingRight">5dp</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">#003E03</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_gravity">center</item>
    </style>

    <style name="persian_text_style">
        <item name="android:textSize">18sp</item>
        <item name="android:paddingTop">5dp</item>
        <item name="android:paddingBottom">15dp</item>
        <item name="android:paddingLeft">5dp</item>
        <item name="android:paddingRight">5dp</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">#000000</item>
        <item name="android:layout_gravity">center</item>


    </style>

    <style name="separator_style">

        <item name="android:layout_width">200dp</item>
        <item name="android:layout_height">20dp</item>
        <item name="android:background">@drawable/ic_separator</item>

        <item name="android:gravity">center</item>
        <item name="android:layout_gravity">center</item>


    </style>

    <style name="switch_style">

        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:gravity">center</item>
        <item name="android:layoutDirection">rtl</item>
        <item name="android:textSize">@dimen/_12ssp</item>
        <item name="android:checked">true</item>
        <item name="android:theme">@style/slider_theme</item>






    </style>

    <style name="title_style">

        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:background">@drawable/switch_background</item>
        <item name="android:padding">10dp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>


    </style>


    <style name="rb_font_style">

        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/text_size_medium</item>

        <item name="android:theme">@style/slider_theme</item>

    </style>

    <style name="rb_style">

        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@drawable/toggle_selector</item>
        <item name="android:padding">@dimen/space_small</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/text_size_medium</item>
        <item name="android:layout_margin">@dimen/space_small</item>
        <item name="android:button">@null</item>

    </style>


    <style name="seek_bar_style">
        <item name="backgroundTint">@color/blue_200</item>
        <item name="android:progressTint">@color/blue_900</item>
    </style>


    <style name="exit_dialog_item_style">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">@dimen/space_medium</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/text_size_medium</item>
        <item name="android:gravity">center</item>


    </style>

    <style name="about_us_dialog_item_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">@dimen/space_small</item>
        <item name="android:layout_marginRight">@dimen/space_medium</item>

        <item name="android:padding">@dimen/space_medium</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/space_large</item>
        <item name="android:gravity">right</item>


    </style>

    <style name="main_button_style">
        <item name="android:layout_width">@dimen/_45sdp</item>
        <item name="android:layout_height">@dimen/_45sdp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/text_size_medium</item>
        <item name="android:gravity">center</item>
        <item name="android:onClick">onClick</item>


    </style>


    <style name="PopupMenu">


        <item name="android:itemBackground">#014003</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:colorBackground">@color/white</item>
        <item name="android:dividerHeight">1dp</item>
    </style>


    <style name="slider_theme" parent="Theme.MaterialComponents.Light.NoActionBar">

        <item name="colorControlActivated">#385720</item>
        <item name="colorPrimary">#385720</item>

    </style>

    <style name="slider_style">

        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:theme">@style/slider_theme</item>
        <item name="android:layout_marginLeft">@dimen/_10sdp</item>
        <item name="android:layout_marginRight">@dimen/_10sdp</item>
        <item name="thumbRadius">@dimen/_5sdp</item>
        <item name="tickColor">@android:color/transparent</item>


    </style>

    <style name="tv_guide_slider_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginRight">@dimen/_15sdp</item>
        <item name="android:textSize">@dimen/_10ssp</item>
        <item name="android:textColor">@color/green_900</item>
        <item name="android:layout_marginTop">-5dp</item>

    </style>

    <style name="tv_guide_font_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginRight">@dimen/_5sdp</item>
        <item name="android:textSize">@dimen/_10ssp</item>
        <item name="android:textColor">@color/green_900</item>




    </style>

    <style name="tv_title_page_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">@dimen/_50sdp</item>
        <item name="android:textSize">@dimen/_20ssp</item>
        <item name="android:textColor">@color/green_900</item>
        <item name="android:textStyle">bold</item>
        <item name="android:gravity">center</item>

    </style>

    <style name="rg_font_setting_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginRight">@dimen/_10sdp</item>
        <item name="android:layout_marginLeft">@dimen/_10sdp</item>
        <item name="android:layout_marginTop">@dimen/_10sdp</item>
        <item name="android:layout_marginBottom">@dimen/_20sdp</item>
        <item name="android:gravity">center|right</item>
        <item name="android:background">@drawable/paragraph_background</item>
        <item name="android:paddingRight">@dimen/_5sdp</item>
        <item name="android:paddingLeft">@dimen/_5sdp</item>

        <item name="android:orientation">horizontal</item>


    </style>



</resources>
