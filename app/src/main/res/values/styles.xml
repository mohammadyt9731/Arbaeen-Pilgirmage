<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/blue_400</item>
        <item name="colorPrimaryDark">#032B4A</item>
        <item name="colorAccent">@color/blue_400</item>





    </style>

    <style name="button_style">

        <item name="android:layout_marginTop">10dp</item>
        <item name="android:textSize">14sp</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_width">50dp</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:onClick">onClick</item>




    </style>

    <style name="banner_style">

        <item name="android:gravity">center</item>
        <item name="android:layout_marginLeft">@dimen/space_large</item>
        <item name="android:layout_marginRight">@dimen/space_large</item>
        <item name="android:layout_marginBottom">@dimen/space_small</item>


    </style>

    <style name="arabic_text_style">
        <item name="android:textSize">20sp</item>
        <item name="android:paddingTop">15dp</item>
        <item name="android:paddingBottom">5dp</item>
        <item name="android:paddingLeft">5dp</item>
        <item name="android:paddingRight">5dp</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">#003E03</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_gravity">center</item>
    </style>

    <style name="persian_text_style">
        <item name="android:textSize">18sp</item>
        <item name="android:paddingTop">5dp</item>
        <item name="android:paddingBottom">15dp</item>
        <item name="android:paddingLeft">5dp</item>
        <item name="android:paddingRight">5dp</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">#000000</item>
        <item name="android:layout_gravity">center</item>


    </style>

    <style name="separator_style">

        <item name="android:layout_width">200dp</item>
        <item name="android:layout_height">20dp</item>
        <item name="android:background">@drawable/ic_separator</item>

        <item name="android:gravity">center</item>
        <item name="android:layout_gravity">center</item>


    </style>

    <style name="switch_style">

        <item name="android:gravity">center</item>
        <item name="android:background">@drawable/switch_background</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">10dp</item>
        <item name="android:layout_marginLeft">40dp</item>
        <item name="android:layout_marginRight">40dp</item>
        <item name="android:textSize">16sp</item>
        <item name="switchMinWidth">50dp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_marginTop">@dimen/space_medium</item>



    </style>

    <style name="title_style">

        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:background">@drawable/switch_background</item>
        <item name="android:padding">10dp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>


    </style>


    <style name="radio_button_font">

        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/text_size_medium</item>
        <item name="android:layout_margin">@dimen/space_small</item>

    </style>

    <style name="rb_style">

        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@drawable/toggle_selector</item>
        <item name="android:padding">@dimen/space_small</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/text_size_medium</item>
        <item name="android:layout_margin">@dimen/space_small</item>
        <item name="android:button">@null</item>

    </style>


    <style name="seek_bar_style" >
        <item name="backgroundTint">@color/blue_200</item>
        <item name="android:progressTint">@color/blue_900</item>
    </style>


    <style name="exit_dialog_item_style">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">@dimen/space_medium</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/text_size_medium</item>
        <item name="android:gravity">center</item>


    </style>

    <style name="about_us_dialog_item_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">@dimen/space_small</item>
        <item name="android:layout_marginRight">@dimen/space_medium</item>

        <item name="android:padding">@dimen/space_medium</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/space_large</item>
        <item name="android:gravity">right</item>


    </style>

    <style name="main_button_style">
        <item name="android:layout_width">80dp</item>
        <item name="android:layout_height">60dp</item>

        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/text_size_medium</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_margin">@dimen/space_medium</item>
        <item name="android:background">@drawable/ic_main_btn</item>
        <item name="android:onClick">onClick</item>


    </style>




    <style name="PopupMenu" >


        <item name="android:itemBackground">#014003</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:colorBackground">@color/white</item>
        <item name="android:dividerHeight">1dp</item>
    </style>



</resources>
