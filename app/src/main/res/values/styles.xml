<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">

        <item name="colorPrimary">@color/blue_400</item>
        <item name="colorPrimaryDark">#182211</item>
        <item name="colorAccent">@color/blue_400</item>


    </style>


    <!--MainActivity-->
    <style name="main_ll_vertical_style">

        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:gravity">center</item>
        <item name="android:orientation">vertical</item>

    </style>

    <style name="main_medium_button_style">

        <item name="android:layout_width">@dimen/main_btn_medium_width</item>
        <item name="android:layout_height">@dimen/main_btn_medium_width</item>
        <item name="android:gravity">center</item>
        <item name="android:onClick">onClick</item>

    </style>

    <style name="main_medium_tv_style">

        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">@dimen/main_tv_medium_text_size</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_marginTop">@dimen/space_small</item>


    </style>

    <style name="main_small_button_style">

        <item name="android:gravity">center</item>
        <item name="android:layout_width">@dimen/main_btn_small_width</item>
        <item name="android:layout_height">@dimen/main_btn_small_width</item>
        <item name="android:onClick">onClick</item>

    </style>

    <style name="main_small_tv_style">

        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">@dimen/main_tv_small_text_size</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:layout_marginTop">@dimen/space_small</item>
        <item name="android:textStyle">bold</item>


    </style>



    <!--NarrativesFragment-->
    <style name="tv_header_fragment_style">

        <item name="android:textSize">@dimen/tv_header_fragment_text_size</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/main_green</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="layout_constraintVertical_bias">0.1</item>
        <item name="fontFamily">@font/nabi</item>

    </style>

    <style name="tv_narrative_paragraph_style">

        <item name="android:textSize">@dimen/narrative_tv_paragraph_text_size</item>
        <item name="android:padding">@dimen/space_small</item>
        <item name="android:gravity">right</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:lineSpacingExtra">@dimen/narrative_tv_paragraph_line_space</item>

    </style>

    <style name="iv_narrative_separator_style">

        <item name="android:layout_width">@dimen/_200sdp</item>
        <item name="android:layout_height">@dimen/_25sdp</item>
        <item name="android:src">@drawable/ic_separator</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_gravity">center</item>
    </style>






    <!--SettingFragment-->

    <style name="cv_setting_style">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">#FFFCF2</item>
        <item name="cardCornerRadius">@dimen/space_medium</item>
        <item name="cardElevation">@dimen/space_medium</item>
        <item name="strokeWidth">3dp</item>
        <item name="strokeColor">@color/gold</item>

    </style>


    <style name="switch_style">

        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layoutDirection">rtl</item>
        <item name="android:textSize">@dimen/_12ssp</item>
        <item name="android:checked">true</item>
        <item name="android:theme">@style/slider_theme</item>
        <item name="android:gravity">right|center</item>
        <item name="android:paddingRight">@dimen/space_small</item>
        <item name="android:paddingLeft">@dimen/space_small</item>


    </style>

    <style name="rg_font_setting_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center|right</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:layoutDirection">ltr</item>

    </style>

    <style name="rb_font_style">

        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/setting_rb_font_text_size</item>
        <item name="android:theme">@style/slider_theme</item>

    </style>

    <style name="slider_theme" parent="Theme.MaterialComponents.Light.NoActionBar">

        <item name="colorControlActivated">@color/main_green</item>
        <item name="colorPrimary">@color/main_green</item>

    </style>

    <style name="tv_guide_slider_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginRight">@dimen/space_medium</item>
        <item name="android:textSize">@dimen/setting_tv_guide_slider_text_size</item>
        <item name="android:textColor">@color/dark_green</item>
        <item name="android:background">@drawable/switch_background</item>
        <item name="android:padding">@dimen/space_small</item>
        <item name="android:gravity">center</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layoutDirection">ltr</item>

    </style>

    <style name="slider_style">

        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:theme">@style/slider_theme</item>
        <item name="android:layout_marginLeft">@dimen/space_very_small</item>
        <item name="thumbRadius">@dimen/setting_slider_thumb_radius</item>
        <item name="tickColor">@android:color/transparent</item>
        <item name="android:layoutDirection">ltr</item>
    </style>


    <style name="arabic_text_style">
        <item name="android:textSize">@dimen/setting_tv_sample_arabic_text_size</item>
        <item name="android:paddingTop">@dimen/space_small</item>
        <item name="android:paddingBottom">@dimen/space_small</item>
        <item name="android:paddingLeft">@dimen/space_small</item>
        <item name="android:paddingRight">@dimen/space_small</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/dark_green</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:fontFamily">@font/nabi</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="persian_text_style">
        <item name="android:textSize">@dimen/setting_tv_sample_persian_text_size</item>
        <item name="android:paddingTop">@dimen/space_small</item>
        <item name="android:paddingBottom">@dimen/space_middle</item>
        <item name="android:paddingLeft">@dimen/space_small</item>
        <item name="android:paddingRight">@dimen/space_small</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:fontFamily">@font/b_nazanin</item>
    </style>








    <!--PilgrimageFragment-->
    <style name="btn_pilgrimage_style">

        <item name="android:layout_width">@dimen/pilgrimage_btn_medium_width</item>
        <item name="android:layout_height">@dimen/pilgrimage_btn_medium_width</item>
        <item name="android:layout_marginLeft">@dimen/space_small</item>
        <item name="android:layout_marginRight">@dimen/space_small</item>


    </style>








    <style name="banner_style">

        <item name="android:gravity">center</item>
        <item name="android:layout_marginLeft">@dimen/space_large</item>
        <item name="android:layout_marginRight">@dimen/space_large</item>
        <item name="android:layout_marginBottom">@dimen/space_small</item>


    </style>







    <style name="title_style">

        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:background">@drawable/switch_background</item>
        <item name="android:padding">10dp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>


    </style>






    <style name="exit_dialog_item_style">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">@dimen/space_medium</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/_14ssp</item>
        <item name="android:gravity">center</item>


    </style>

    <style name="about_us_dialog_item_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">@dimen/space_small</item>
        <item name="android:layout_marginRight">@dimen/space_medium</item>

        <item name="android:padding">@dimen/space_medium</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/space_large</item>
        <item name="android:gravity">right</item>


    </style>


    <style name="PopupMenu">


        <item name="android:itemBackground">#014003</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:colorBackground">@color/white</item>
        <item name="android:dividerHeight">1dp</item>
    </style>













</resources>
