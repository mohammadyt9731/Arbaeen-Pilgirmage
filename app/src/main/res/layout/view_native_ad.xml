<?xml version="1.0" encoding="utf-8"?>


<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="bottom"
    android:background="@drawable/native_ad_background"
    android:padding="@dimen/space_small"
    app:layout_constraintBottom_toBottomOf="parent">

    <ImageView
        android:id="@+id/tapsell_nativead_logo"
        android:layout_width="@dimen/space_4Xlarge"
        android:layout_height="@dimen/space_4Xlarge"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
         />

    <TextView
        android:id="@+id/tapsell_nativead_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/space_medium"
        android:gravity="right"
        android:text="@string/title"
        android:textColor="@color/black"
        android:textStyle="bold"
        app:layout_constraintLeft_toRightOf="@id/tapsell_nativead_cta"
        app:layout_constraintRight_toLeftOf="@id/tapsell_nativead_logo"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tapsell_nativead_description"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:gravity="right"
        android:text="@string/description"
        android:textColor="@android:color/black"
        app:layout_constraintLeft_toLeftOf="@id/tapsell_nativead_title"
        app:layout_constraintRight_toRightOf="@id/tapsell_nativead_title"
        app:layout_constraintTop_toBottomOf="@id/tapsell_nativead_title" />

    <Button
        android:id="@id/tapsell_nativead_cta"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/title_background"
        android:text="@string/install"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>


