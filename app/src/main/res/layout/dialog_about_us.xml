<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingLeft="@dimen/space_small"
    android:paddingRight="@dimen/space_small"
    android:paddingTop="@dimen/space_medium"
    android:paddingBottom="@dimen/space_large"
    android:background="@drawable/dialog_background"
    >

    <ImageView

        android:layout_width="@dimen/space_35dp"
        android:layout_height="@dimen/space_35dp"
        android:layout_marginRight="@dimen/space_small"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:background="@drawable/ic_notices"/>

    <TextView
        android:id="@+id/about_us"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
       app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"

        app:layout_constraintTop_toTopOf="parent"
        android:gravity="center"
        android:textSize="@dimen/text_size_2xlarge"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:text="@string/ttp" />

    <View
        android:id="@+id/horizontal_divider"
        android:layout_width="match_parent"
        android:layout_height="@dimen/space_very_small"
        android:layout_marginTop="6dp"
        app:layout_constraintTop_toBottomOf="@id/about_us"
        android:background="@color/green_900" />

    <ImageView
        android:id="@+id/programmer_icon"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_marginRight="@dimen/space_medium"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@id/programmer"
        app:layout_constraintBottom_toBottomOf="@id/programmer"
        android:background="@drawable/ic_programmer">

    </ImageView>

    <TextView
        android:id="@+id/programmer"
        style="@style/about_us_dialog_item_style"
        app:layout_constraintRight_toLeftOf="@id/programmer_icon"
        app:layout_constraintTop_toBottomOf="@id/horizontal_divider"
        android:text="@string/programmer_name" />


    <ImageView
        android:id="@+id/version_icon"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_marginRight="10dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@id/version"
        app:layout_constraintBottom_toBottomOf="@id/version"
        android:background="@drawable/ic_version">

    </ImageView>

    <TextView
        android:id="@+id/version"
        style="@style/about_us_dialog_item_style"
        app:layout_constraintRight_toLeftOf="@id/version_icon"
        app:layout_constraintTop_toBottomOf="@id/programmer"
        android:text="@string/code_version" />


    <ImageView
        android:id="@+id/email_icon"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_marginRight="10dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@id/email"
        app:layout_constraintBottom_toBottomOf="@id/email"
        android:background="@drawable/ic_email">

    </ImageView>

    <TextView
        android:id="@+id/email"
        style="@style/about_us_dialog_item_style"
        app:layout_constraintRight_toLeftOf="@id/email_icon"
        app:layout_constraintTop_toBottomOf="@id/version"
        android:text="@string/support_email" />

    <TextView
        android:id="@+id/email_address"
        style="@style/about_us_dialog_item_style"
        android:layout_marginLeft="5dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/email"
        android:text="@string/supttp" />

</androidx.constraintlayout.widget.ConstraintLayout>
