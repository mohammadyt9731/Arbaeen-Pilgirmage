<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_study"
    android:gravity="center">


    <TextView
        android:id="@+id/tv_title_fragmentSalawatCount"
        style="@style/tv_title_fragment_style"
        android:layout_width="match_parent"
        android:text="@string/salawat_count"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.cardview.widget.CardView
        android:id="@+id/cv_mention_fragmentSalawatCount"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/_10sdp"
        android:background="@drawable/paragraph_background"
        app:cardCornerRadius="@dimen/_6sdp"
        app:cardElevation="@dimen/_6sdp"
        app:layout_constraintBottom_toTopOf="@id/cl_container_fragmentSalawatCount"
        app:layout_constraintTop_toBottomOf="@id/tv_title_fragmentSalawatCount">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingVertical="@dimen/_22sdp"
            android:paddingHorizontal="@dimen/_12sdp"

            >

            <TextView
                android:id="@+id/tv_mentionTitle_fragmentSalawatCount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="@string/sample_mention_title"
                android:textColor="@color/green_900"
                android:textSize="@dimen/_18ssp"
                android:textStyle="bold"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/tv_maxNumber_itemMentionLIst"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/space_medium"
                android:text="@string/tv_sample_maxNumber"
                android:textColor="@color/dark_green"
                android:textSize="@dimen/_14ssp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tv_mentionTitle_fragmentSalawatCount" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>


    <androidx.constraintlayout.widget.ConstraintLayout

        android:id="@+id/cl_container_fragmentSalawatCount"
        android:layout_width="@dimen/_180sdp"
        android:layout_height="@dimen/_240sdp"
        android:layout_gravity="center"
        android:background="@drawable/zekrshmar_icon"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/cv_mention_fragmentSalawatCount">

        <TextView
            android:id="@+id/tv_counter_fragmentSalawatCount"
            android:layout_width="@dimen/_130sdp"
            android:layout_height="@dimen/_55sdp"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/_40sdp"
            android:gravity="right|center"
            android:paddingRight="@dimen/space_small"
            android:text="0"
            android:textColor="@color/black"
            android:textSize="@dimen/_42ssp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent">

        </TextView>

        <Button
            android:id="@+id/btn_counterIncrement_fragmentSalawatCount"
            android:layout_width="@dimen/_75sdp"
            android:layout_height="@dimen/_75sdp"
            android:layout_gravity="center"
            android:layout_marginBottom="@dimen/_25sdp"
            android:background="@android:color/transparent"
            android:textColor="@color/black"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent">

        </Button>

        <ImageView
            android:id="@+id/iv_reset_fragmentSalawatCount"
            android:layout_width="@dimen/_25sdp"
            android:layout_height="@dimen/_25sdp"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/_120sdp"
            android:layout_marginRight="@dimen/_35sdp"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"

            >

        </ImageView>
        
    </androidx.constraintlayout.widget.ConstraintLayout>


</androidx.constraintlayout.widget.ConstraintLayout>