    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/fl_zekr_shomar"
        app:layout_constraintBottom_toTopOf="@id/fl_ad_container"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_width="230dp"
        android:layout_height="300dp"
        android:layout_gravity="center"
        android:layout_marginBottom="@dimen/space_small"
        android:background="@drawable/zekrshmar_icon">

        <TextView
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="55dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"

            android:id="@+id/tv_counter_text"
            android:layout_width="166dp"
            android:layout_height="65dp"
            android:layout_gravity="center"
            android:layout_marginBottom="65dp"
            android:paddingRight="5dp"
            android:gravity="right|center"
            android:textSize="50sp"

            android:textColor="#E9232323"
            android:text="0">

        </TextView>

        <Button
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="37dp"
            android:id="@+id/btn_counter_plus_plus"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_gravity="center"
            android:background="@android:color/transparent"
            android:textSize="25dp"
            android:textColor="@color/black">

        </Button>

        <ImageView
            app:layout_constraintBottom_toTopOf="@id/btn_counter_plus_plus"
            app:layout_constraintLeft_toRightOf="@id/btn_counter_plus_plus"
            android:id="@+id/iv_reset"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_gravity="center"

            >

        </ImageView>


    </androidx.constraintlayout.widget.ConstraintLayout>

    <Button
        app:layout_constraintLeft_toRightOf="@id/fl_zekr_shomar"
        android:id="@+id/btn_sound"
        app:layout_constraintTop_toTopOf="@id/fl_zekr_shomar"
        app:layout_constraintBottom_toBottomOf="@id/fl_zekr_shomar"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_gravity="center"
        android:background="@drawable/sound"

        >

    </Button>


    <FrameLayout
        android:id="@+id/fl_ad_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="15dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_gravity="bottom"
        android:maxHeight="60dp"

        >
    </FrameLayout>

