<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/study_background"
    android:orientation="vertical"
    android:clickable="true"
    android:gravity="center">


    <Spinner
        android:layout_width="match_parent"
        android:layout_height="80dp"
        app:layout_constraintTop_toTopOf="@id/tv_mention_type"
        android:popupBackground="@color/white"
android:background="@drawable/dialog_background"
        android:id="@+id/spinner"
        android:layout_margin="40dp"/>

    <TextView
        android:id="@+id/tv_mention_type"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        android:background="@drawable/dialog_background"
        android:text="ذکرروز هفته"
        android:textSize="26sp"
        android:gravity="center"

        android:paddingRight="15dp"
        android:paddingLeft="25dp"
        android:textColor="#023704"
        android:layout_marginHorizontal="30dp"
        android:layout_marginTop="20dp"/>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_arrow_drop_down"
        app:layout_constraintTop_toTopOf="@id/tv_mention_type"
        app:layout_constraintBottom_toBottomOf="@id/tv_mention_type"
        app:layout_constraintLeft_toLeftOf="@id/tv_mention_type"/>




    <TextView
        android:id="@+id/tv_mention"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="اللهم صل علی محمد و آل محمد"
        android:textSize="20sp"
        app:layout_constraintTop_toBottomOf="@id/tv_mention_type"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="20dp"
        android:textColor="#023704"/>


