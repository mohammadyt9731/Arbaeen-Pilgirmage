<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/study_background"
    android:orientation="vertical"
    android:gravity="center">

    <FrameLayout
        android:id="@+id/frame_small_zekrshomar"
        app:layout_constraintBottom_toTopOf="@id/adContainer"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_width="230dp"
        android:layout_height="300dp"
        android:layout_gravity="center"
        android:layout_marginBottom="@dimen/space_large"
        android:background="@drawable/zekrshmar_icon">

        <TextView
            android:id="@+id/couter_text"
            android:layout_width="166dp"
            android:layout_height="65dp"
            android:layout_gravity="center"
            android:layout_marginBottom="65dp"
            android:paddingRight="5dp"
            android:gravity="right|center"
            android:textSize="50sp"


            android:textColor="#E9232323"
            android:text="0">

        </TextView>

        <Button
            android:id="@+id/counter_button"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_gravity="center"
            android:layout_marginTop="70dp"
            android:background="@android:color/transparent"
            android:textSize="25dp"
            android:textColor="@color/black">

        </Button>

        <ImageView
            android:id="@+id/reset_button"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_gravity="center"
            android:layout_marginLeft="55dp"
            android:layout_marginTop="15dp"
            >

        </ImageView>


    </FrameLayout>

    <Button
        app:layout_constraintLeft_toRightOf="@id/frame_small_zekrshomar"
        android:id="@+id/button_sound"
        app:layout_constraintTop_toTopOf="@id/frame_small_zekrshomar"
        app:layout_constraintBottom_toBottomOf="@id/frame_small_zekrshomar"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_gravity="center"
        android:background="@drawable/sound"

        >

    </Button>


    <FrameLayout
        android:id="@+id/adContainer"
        android:layout_width="match_parent"
        android:layout_height="@dimen/space_70dp"
        android:layout_margin="@dimen/space_very_small"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_gravity="bottom"
        >
    </FrameLayout>

</androidx.constraintlayout.widget.ConstraintLayout>