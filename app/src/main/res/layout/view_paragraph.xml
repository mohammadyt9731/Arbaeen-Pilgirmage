<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="top"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/tv_arabic_text"
        style="@style/arabic_text_style"
        android:text="@string/sample_arabic_text"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/tv_persian_text"
        style="@style/persian_text_style"
        android:text="@string/sample_persian_text"
       />

    <ImageView
        android:id="@+id/iv_separator"
        style="@style/iv_narrative_separator_style"/>



</LinearLayout>