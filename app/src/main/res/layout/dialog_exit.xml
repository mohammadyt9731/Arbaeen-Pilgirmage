<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/exit_text"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:gravity="right"
        android:padding="12dp"
        android:text="@string/dialog_exit_title"
        android:textColor="@color/black"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/exit_icon"
        app:layout_constraintTop_toTopOf="parent" />


    <Button
        android:id="@+id/exit_icon"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginRight="10dp"
        android:background="@drawable/ic_exit"
        app:layout_constraintBottom_toTopOf="@id/rl_tapsell_ad"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"

        >

    </Button>

    <ImageView
        android:id="@+id/horizontal_line1"
        android:layout_width="match_parent"
        android:layout_height="3dp"
        android:background="@color/dark_green"
        app:layout_constraintTop_toBottomOf="@id/exit_text" />

    <ProgressBar
        android:id="@+id/progressBar"
        style="?android:attr/progressBarStyle"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="@id/rl_tapsell_ad"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@id/rl_tapsell_ad"

        />

    <RelativeLayout
        android:id="@+id/rl_tapsell_ad"
        android:layout_width="match_parent"
        android:layout_height="270dp"
        android:gravity="center"
        app:layout_constraintBottom_toTopOf="@id/horizontal_line2"
        app:layout_constraintTop_toBottomOf="@id/horizontal_line1">

    </RelativeLayout>


    <ImageView
        android:id="@+id/horizontal_line2"
        android:layout_width="match_parent"
        android:layout_height="3dp"
        android:background="@color/dark_green"
        app:layout_constraintTop_toBottomOf="@id/rl_tapsell_ad" />


    <TextView
        android:id="@+id/btn_other_app"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:padding="10dp"
        android:text="@string/other_app"
        android:textColor="@color/black"
        android:textSize="16sp"
        app:layout_constraintLeft_toRightOf="@id/vertical_line1"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/horizontal_line2" />

    <ImageView
        android:id="@+id/vertical_line1"
        android:layout_width="3dp"
        android:layout_height="0dp"
        android:background="@color/dark_green"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="@id/btn_comment"
        app:layout_constraintRight_toRightOf="@id/btn_other_app"
        app:layout_constraintTop_toBottomOf="@id/horizontal_line2"

        />


    <TextView
        android:id="@+id/btn_comment"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:padding="10dp"
        android:text="@string/comment"
        android:textColor="@color/black"
        android:textSize="16sp"
        app:layout_constraintLeft_toRightOf="@id/vertical_line2"


        app:layout_constraintRight_toLeftOf="@id/vertical_line1"
        app:layout_constraintTop_toBottomOf="@id/horizontal_line2" />

    <ImageView
        android:id="@+id/vertical_line2"
        android:layout_width="3dp"
        android:layout_height="0dp"
        android:background="@color/dark_green"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toRightOf="@id/btn_exit"
        app:layout_constraintRight_toRightOf="@id/btn_comment"
        app:layout_constraintTop_toBottomOf="@id/horizontal_line2" />


    <TextView
        android:id="@+id/btn_exit"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:padding="10dp"
        android:text="@string/exit"
        android:textColor="@color/black"
        android:textSize="16sp"
        app:layout_constraintLeft_toLeftOf="parent"

        app:layout_constraintRight_toLeftOf="@id/vertical_line2"
        app:layout_constraintTop_toBottomOf="@id/horizontal_line2" />

</androidx.constraintlayout.widget.ConstraintLayout>
