<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:background="@drawable/dialog_background"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/tv_exit_text"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:gravity="right"
        android:padding="@dimen/space_middle"
        android:text="@string/dialog_exit_title"
        android:textColor="@color/black"
        android:textSize="@dimen/text_size_medium"
        android:textStyle="bold"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/iv_exit_icon"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/iv_exit_icon"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginRight="10dp"
        android:background="@drawable/ic_menu"
        app:layout_constraintBottom_toTopOf="@id/rl_tapsell_ad"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/horizontal_divider_top"
        android:layout_width="match_parent"
        android:layout_height="@dimen/space_very_small"
        android:background="@color/green_900"
        app:layout_constraintTop_toBottomOf="@id/tv_exit_text" />

    <ProgressBar

        android:id="@+id/progressBar"
        style="?android:attr/progressBarStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="@id/rl_tapsell_ad"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@id/rl_tapsell_ad"/>

    <RelativeLayout
        android:id="@+id/rl_tapsell_ad"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toTopOf="@id/horizontal_divider_bottom"
        app:layout_constraintTop_toBottomOf="@id/horizontal_divider_top"/>


    <View
        android:id="@+id/horizontal_divider_bottom"
        android:layout_width="match_parent"
        android:layout_height="@dimen/space_very_small"
        android:background="@color/green_900"
        app:layout_constraintTop_toBottomOf="@id/rl_tapsell_ad" />


    <TextView
        android:id="@+id/btn_other_apps"
        style="@style/exit_dialog_item_style"
        android:text="@string/other_app"
        app:layout_constraintLeft_toRightOf="@id/vertical_divider_right"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/horizontal_divider_bottom" />

    <View
        android:id="@+id/vertical_divider_right"
        android:layout_width="@dimen/space_very_small"
        android:layout_height="0dp"
        android:background="@color/green_900"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="@id/btn_comment"
        app:layout_constraintRight_toRightOf="@id/btn_other_apps"
        app:layout_constraintTop_toBottomOf="@id/horizontal_divider_bottom"

        />


    <TextView
        android:id="@+id/btn_comment"
        style="@style/exit_dialog_item_style"
        android:text="@string/comment"
        app:layout_constraintLeft_toRightOf="@id/vertical_divider_left"
        app:layout_constraintRight_toLeftOf="@id/vertical_divider_right"
        app:layout_constraintTop_toBottomOf="@id/horizontal_divider_bottom" />

    <View
        android:id="@+id/vertical_divider_left"
        android:layout_width="3dp"
        android:layout_height="0dp"
        android:background="@color/green_900"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toRightOf="@id/btn_exit"
        app:layout_constraintRight_toRightOf="@id/btn_comment"
        app:layout_constraintTop_toBottomOf="@id/horizontal_divider_bottom" />


    <TextView
        android:id="@+id/btn_exit"
        style="@style/exit_dialog_item_style"
        android:text="@string/exit"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/vertical_divider_left"
        app:layout_constraintTop_toBottomOf="@id/horizontal_divider_bottom" />

</androidx.constraintlayout.widget.ConstraintLayout>
