<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_study"
    android:clickable="true">

    <TextView
        android:id="@+id/tv_header_narratives"
        style="@style/tv_header_fragment_style"
        android:layout_width="match_parent"
        android:text="@string/narratives"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_narrative"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="@dimen/rv_narratives_margin_top"
        android:paddingHorizontal="@dimen/rv_narratives_padding_horizontal"
        app:layout_constraintBottom_toTopOf="@id/rl_advertising"
        app:layout_constraintTop_toBottomOf="@id/tv_header_narratives">

    </androidx.recyclerview.widget.RecyclerView>

    <RelativeLayout
        android:id="@+id/rl_advertising"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center|bottom"
        android:paddingBottom="@dimen/rl_advertising_padding_bottom"
        app:layout_constraintBottom_toBottomOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>