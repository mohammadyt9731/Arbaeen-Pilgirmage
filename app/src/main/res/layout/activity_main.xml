<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_main"
    android:keepScreenOn="true"
    tools:context=".avtivities.MainActivity"
    tools:openDrawer="right">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/tv_Title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/nabi"
            android:gravity="center"
            android:text="@string/pilgrimage_arbaeen"
            android:textColor="@color/white"
            android:textSize="40sp"
            app:layout_constraintTop_toTopOf="parent" />

        <Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?actionBarSize"
            android:background="@android:color/transparent"
            android:contentInsetStart="0dp"
            android:elevation="30dp"
            app:layout_constraintTop_toTopOf="parent">

            <androidx.constraintlayout.widget.ConstraintLayout

                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="@dimen/space_small">

                <Button
                    android:id="@+id/btn_toolbar_advertising"
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:background="@drawable/ic_advertisement"
                    android:onClick="onClick"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toTopOf="parent"

                    >

                </Button>

                <Button
                    android:id="@+id/btn_open_navigation_view"
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:background="@drawable/ic_menu"
                    android:onClick="onClick"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toTopOf="parent">

                </Button>

            </androidx.constraintlayout.widget.ConstraintLayout>

        </Toolbar>

        <FrameLayout

            android:id="@+id/fl_container"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:elevation="@dimen/space_Xlarge"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent" />


        <LinearLayout
            android:id="@+id/ll_large_icon"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:gravity="center"
            android:orientation="vertical"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent"

            app:layout_constraintVertical_bias="0.45"


            >

            <Button
                android:id="@+id/btn_pilgrimage"
                android:layout_width="@dimen/_180sdp"
                android:layout_height="@dimen/_70sdp"
                android:background="@drawable/ic_main"
                android:fontFamily="@font/nabi"
                android:onClick="onClick"
                android:text="@string/pilgrimage_arbaeen"
                android:textColor="#423B05"
                android:textSize="@dimen/_20ssp"
                android:textStyle="bold">

            </Button>

            <TextView
                style="@style/button_style"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/pilgrimage_arbaeen"
                android:textSize="@dimen/_20ssp"
                android:visibility="gone" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_medium_icon"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/_20sdp"
            android:gravity="center"
            android:orientation="horizontal"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.65"

            >


            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <Button
                    android:id="@+id/btn_salawat_count"
                    style="@style/main_button_style"
                    android:background="@drawable/ic_salawat_count"

                    >

                </Button>

                <TextView
                    style="@style/button_style"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/salawat_count" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <Button
                    android:id="@+id/btn_narratives"
                    style="@style/main_button_style"
                    android:background="@drawable/ic_narrative">

                </Button>

                <TextView
                    style="@style/button_style"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/narratives" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <Button
                    android:id="@+id/btn_setting"
                    style="@style/main_button_style"
                    android:background="@drawable/ic_setting">

                </Button>

                <TextView
                    style="@style/button_style"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/setting" />

            </LinearLayout>


        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_small_icon"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="10dp"

            android:gravity="center"
            android:orientation="horizontal"
            android:weightSum="4"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.8">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <Button
                    android:id="@+id/btn_other_apps"
                    style="@style/button_style"
                    android:background="@drawable/ic_other_app">

                </Button>

                <TextView
                    style="@style/button_style"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:text="@string/other_app" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <Button
                    android:id="@+id/btn_comment"
                    style="@style/button_style"
                    android:background="@drawable/ic_comment"

                    >

                </Button>

                <TextView
                    style="@style/button_style"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:text="@string/comment" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <Button
                    android:id="@+id/btn_notices"
                    style="@style/button_style"
                    android:background="@drawable/ic_hemayat"

                    >

                </Button>

                <TextView
                    style="@style/button_style"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:text="@string/notices" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <Button
                    android:id="@+id/btn_share_app"
                    style="@style/button_style"
                    android:background="@drawable/ic_share_app">


                </Button>


                <TextView
                    style="@style/button_style"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:text="@string/share_app" />
            </LinearLayout>

        </LinearLayout>


        <RelativeLayout

            android:id="@+id/ad_container"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_50sdp"
            android:layout_margin="@dimen/space_small"
            android:gravity="center"
            app:layout_constraintBottom_toBottomOf="parent" />


    </androidx.constraintlayout.widget.ConstraintLayout>

    <com.google.android.material.navigation.NavigationView

        android:id="@+id/navigation_view"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="right"
        android:background="@drawable/slide_menu_background"
        android:visibility="gone"
        app:headerLayout="@layout/header_layout"
        app:itemIconTint="#ffffff"
        app:itemTextColor="#ffffff"
        app:menu="@menu/navigation_view_menu" />

</androidx.drawerlayout.widget.DrawerLayout>