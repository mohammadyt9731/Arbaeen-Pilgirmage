<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="@dimen/_100sdp"
    android:layout_marginHorizontal="@dimen/space_medium"
    android:layout_marginVertical="@dimen/space_small"
    android:paddingTop="@dimen/_10sdp"
    android:background="@drawable/ic_mention"
    app:layout_constraintTop_toTopOf="parent">

    <ImageView
        android:id="@+id/iv_delete_mention"
        android:layout_width="@dimen/_25sdp"
        android:layout_height="@dimen/_25sdp"
        android:src="@drawable/ic_delete"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="@dimen/_10sdp"
        app:layout_constraintBottom_toBottomOf="parent"

        />
    <ImageView
        android:id="@+id/iv_edit_mention"
        android:layout_width="@dimen/_25sdp"
        android:layout_height="@dimen/_25sdp"
        android:src="@drawable/ic_edit"
       app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginRight="@dimen/_10sdp"


        />


    <TextView
        android:id="@+id/tv_mention_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="اللهم صل علی محمد و آل محمد"
        android:textColor="#023704"
        android:textSize="@dimen/_16ssp"
        android:textStyle="bold"
        android:layout_marginHorizontal="@dimen/_10sdp"
        android:singleLine="true"
        android:ellipsize="marquee"
        android:marqueeRepeatLimit="marquee_forever"
        app:layout_constraintRight_toLeftOf="@id/iv_edit_mention"
        app:layout_constraintLeft_toRightOf="@id/iv_delete_mention"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"

        />

    <TextView
        android:id="@+id/tv_number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="تعداد کل : "
        android:textStyle="bold"
        android:textColor="#000B01"
        android:textSize="@dimen/_14ssp"
       android:layout_marginRight="@dimen/_40sdp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_mention_title" />
    <TextView
        android:id="@+id/tv_total_number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="100"
        android:textColor="#000B01"
        android:textSize="@dimen/_14ssp"
        app:layout_constraintTop_toTopOf="@id/tv_number"
        app:layout_constraintBottom_toBottomOf="@id/tv_number"
        app:layout_constraintRight_toLeftOf="@id/tv_number"
        />

    <TextView
        android:id="@+id/tv_number_say"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="تعداد گفته شده :"
        android:textStyle="bold"
        android:textColor="#000B01"
        android:textSize="@dimen/_14ssp"
        android:layout_marginRight="@dimen/_10sdp"
       app:layout_constraintRight_toLeftOf="@id/tv_total_number"
        app:layout_constraintTop_toBottomOf="@id/tv_mention_title" />
    <TextView
        android:id="@+id/tv_total_say"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="80"
        android:textColor="#000B01"
        android:textSize="@dimen/_14ssp"
        app:layout_constraintTop_toTopOf="@id/tv_number"
        app:layout_constraintBottom_toBottomOf="@id/tv_number"
        app:layout_constraintRight_toLeftOf="@id/tv_number_say"
        />

</androidx.constraintlayout.widget.ConstraintLayout>