<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <FrameLayout
        android:id="@+id/fl_fragment_container"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="@drawable/study_background"
        android:paddingTop="@dimen/space_large"
        android:paddingBottom="@dimen/space_medium"
        app:layout_constraintBottom_toTopOf="@id/navigation_bottom"
        app:layout_constraintTop_toTopOf="parent"/>

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/navigation_bottom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/navigation_bottom_background"
        app:itemIconTint="@color/nav_bottom_color"
        app:itemTextColor="@color/nav_bottom_color"
        app:layout_constraintBottom_toBottomOf="parent"
        app:menu="@menu/navigation_bottom_menu" />


</androidx.constraintlayout.widget.ConstraintLayout>