<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:background="@drawable/study_background"
    android:clickable="true"
    android:layout_height="match_parent">

    <com.google.android.material.tabs.TabLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:id="@+id/tab_layout_setting"
        app:layout_constraintTop_toTopOf="parent"
        app:tabTextColor="@color/black"
        app:tabRippleColor="@color/blue_200"
        app:tabSelectedTextColor="@color/blue_900"
        android:background="#CEDEEA"
        android:layout_margin="15dp"/>

    <androidx.viewpager.widget.ViewPager
        android:id="@+id/view_pager_setting"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/tab_layout_setting"
        app:layout_constraintBottom_toBottomOf="parent"
        android:paddingLeft="15dp"
        android:layout_marginBottom="20dp"
        android:paddingRight="15dp"/>



