<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_study"
    android:clickable="true"
    android:fillViewport="true">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_study">

        <TextView
            android:id="@+id/tv_header_setting"
            style="@style/tv_title_page_style"
            android:layout_width="match_parent"
            android:text="@string/setting"
            app:layout_constraintTop_toTopOf="parent" />

        <LinearLayout
            android:id="@+id/ll_switch_setting"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/_20sdp"
            android:layout_marginTop="@dimen/_20sdp"
            android:orientation="vertical"
            app:layout_constraintTop_toBottomOf="@+id/tv_header_setting">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:layoutDirection="rtl"
                android:orientation="horizontal">

                <Switch
                    style="@style/switch_style"
                    android:text="@string/show_translation" />

                <Switch
                    style="@style/switch_style"
                    android:text="@string/dark_theme" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_weight="1"
                android:layoutDirection="rtl"
                android:orientation="horizontal">

                <Switch
                    style="@style/switch_style"
                    android:text="@string/auto_scroll" />

                <Switch
                    style="@style/switch_style"
                    android:text="نمایش جدا کننده" />


            </LinearLayout>

        </LinearLayout>

        <TextView
            android:id="@+id/tv_arabic_font"
            style="@style/tv_guide_font_style"
            android:elevation="10dp"
            android:text="فونت عربی"
            app:layout_constraintBottom_toBottomOf="@id/rg_arabic_fonts"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="@id/rg_arabic_fonts"


            />

        <RadioGroup
            android:id="@+id/rg_arabic_fonts"
            style="@style/rg_font_setting_style"
            android:layout_width="0dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toLeftOf="@id/tv_arabic_font"
            app:layout_constraintTop_toBottomOf="@id/ll_switch_setting">

            <RadioButton
                android:id="@+id/rb_arabic_font3"
                style="@style/rb_font_style"
                android:text="@string/nabi" />

            <RadioButton
                android:id="@+id/rb_arabic_font2"
                style="@style/rb_font_style"
                android:checked="true"
                android:text="@string/morvarid" />

            <RadioButton
                android:id="@+id/rb_arabic_font1"
                style="@style/rb_font_style"
                android:text="@string/homa" />

        </RadioGroup>

        <TextView


            style="@style/tv_guide_slider_style"
            android:text="سایز متن عربی"
            app:layout_constraintRight_toRightOf="@id/slider_arabic_text_size"
            app:layout_constraintTop_toTopOf="@id/slider_arabic_text_size" />

        <com.google.android.material.slider.Slider
            android:id="@+id/slider_arabic_text_size"
            style="@style/slider_style"
            android:valueFrom="12"
            android:valueTo="34"
            android:value="22"
          android:stepSize="1"
            android:layout_width="match_parent"
            android:layout_marginTop="@dimen/_15sdp"
            app:layout_constraintTop_toBottomOf="@id/rg_arabic_fonts" />

        <TextView
            android:id="@+id/tv_persian_font"
            style="@style/tv_guide_font_style"
            android:elevation="10dp"
            android:text="فونت فارسی"
            app:layout_constraintBottom_toBottomOf="@id/rg_persian_fonts"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="@id/rg_persian_fonts"


            />

        <RadioGroup
            android:id="@+id/rg_persian_fonts"
            style="@style/rg_font_setting_style"
            android:layout_width="0dp"
            app:layout_constraintRight_toLeftOf="@id/tv_persian_font"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@id/slider_arabic_text_size">

            <RadioButton
                android:id="@+id/rb_persian_font3"
                style="@style/rb_font_style"
                android:text="فردوسی" />

            <RadioButton
                android:id="@+id/rb_persian_font2"
                style="@style/rb_font_style"
                android:checked="true"
                android:text="نازنین" />

            <RadioButton
                android:id="@+id/rb_persian_font1"
                style="@style/rb_font_style"
                android:text="حمید" />

        </RadioGroup>

        <TextView

            style="@style/tv_guide_slider_style"
            android:text="سایز متن فارسی"
            app:layout_constraintRight_toRightOf="@id/slider_persian_text_size"
            app:layout_constraintTop_toTopOf="@id/slider_persian_text_size" />

        <com.google.android.material.slider.Slider
            android:id="@+id/slider_persian_text_size"
            style="@style/slider_style"
            android:layout_width="match_parent"
            android:valueFrom="10"
            android:value="20"
            android:valueTo="30"
            android:stepSize="1"
            android:layout_marginTop="@dimen/_15sdp"
            app:layout_constraintTop_toBottomOf="@id/rg_persian_fonts" />

        <TextView
            style="@style/tv_guide_slider_style"
            android:text="فاصله بین خطوط"
            app:layout_constraintRight_toRightOf="@id/slider_line_spacing"
            app:layout_constraintTop_toTopOf="@id/slider_line_spacing" />

        <com.google.android.material.slider.Slider
            android:id="@+id/slider_line_spacing"
            style="@style/slider_style"
            android:valueFrom="0"
            android:valueTo="10"
            android:stepSize="1"
            android:value="1"
            android:layout_width="match_parent"
            app:layout_constraintTop_toBottomOf="@id/slider_persian_text_size" />

        <LinearLayout
            android:padding="@dimen/_5sdp"
            android:id="@+id/ll_sample_paragraph"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/_10sdp"
            android:background="@drawable/paragraph_background"
            android:orientation="vertical"
            android:layout_marginBottom="@dimen/_10sdp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@id/slider_line_spacing">

            <TextView
                android:id="@+id/tv_arabic_text"
                style="@style/arabic_text_style"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/sample_arabic_text" />

            <TextView
                android:id="@+id/tv_persian_text"
                style="@style/persian_text_style"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/sample_persian_text" />

            <ImageView
                android:id="@+id/iv_separator"
                style="@style/separator_style" />


        </LinearLayout>


