<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="@dimen/_8sdp"
    android:layout_marginVertical="@dimen/_4sdp"
    android:background="@drawable/bg_mention_list"
    android:padding="@dimen/_12sdp"
    app:layout_constraintTop_toTopOf="parent">

    <ImageView
        android:id="@+id/iv_delete_itemMentionLIst"
        android:layout_width="@dimen/_18sdp"
        android:layout_height="@dimen/_18sdp"
        android:layout_marginBottom="@dimen/_8sdp"
        android:src="@drawable/ic_delete"
        app:layout_constraintBottom_toTopOf="@id/iv_edit_itemMentionLIst"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/iv_edit_itemMentionLIst"
        android:layout_width="@dimen/_18sdp"
        android:layout_height="@dimen/_18sdp"
        android:layout_marginTop="@dimen/_8sdp"
        android:src="@drawable/ic_edit"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="@id/iv_delete_itemMentionLIst"
        app:layout_constraintRight_toRightOf="@id/iv_delete_itemMentionLIst"
        app:layout_constraintTop_toBottomOf="@id/iv_delete_itemMentionLIst" />

    <TextView
        android:id="@+id/tv_title_itemMentionLIst"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:gravity="center"
        android:singleLine="true"
        android:text="@string/sample_mention_title"
        android:textColor="@color/green_600"
        android:textSize="@dimen/_16ssp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@id/tv_maxNumber_itemMentionLIst"
        app:layout_constraintHorizontal_bias="1"
        app:layout_constraintLeft_toRightOf="@id/iv_delete_itemMentionLIst"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"

        />

    <TextView
        android:id="@+id/tv_maxNumber_itemMentionLIst"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/tv_sample_maxNumber"
        android:textColor="@color/dark_green"
        android:textSize="@dimen/_14ssp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="1"
        app:layout_constraintLeft_toRightOf="@id/iv_edit_itemMentionLIst"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_title_itemMentionLIst" />


</androidx.constraintlayout.widget.ConstraintLayout>