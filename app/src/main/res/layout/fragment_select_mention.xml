<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_study"
    android:clickable="true"
    android:focusable="true">

    <TextView
        android:id="@+id/tv_header_select_mention"
        style="@style/tv_header_fragment_style"
        android:layout_width="match_parent"
        android:text="@string/select_mention"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.recyclerview.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="@id/tv_header_select_mention"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_margin="@dimen/space_middle"/>

    <com.google.android.material.floatingactionbutton.ExtendedFloatingActionButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="افزودن ذکر"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_margin="@dimen/space_middle"
        android:textSize="@dimen/_16ssp"
        app:backgroundTint="@color/main_green"
        android:textColor="@color/white"
        android:paddingVertical="@dimen/space_small"
        android:drawableLeft="@drawable/ic_plus_fab"
        >

    </com.google.android.material.floatingactionbutton.ExtendedFloatingActionButton>



</androidx.constraintlayout.widget.ConstraintLayout>